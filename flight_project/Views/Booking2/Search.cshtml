@model IEnumerable<flight_project.Models.Booking2>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/View1.cshtml";
}



<p>
    @using (Html.BeginForm("Search", "Booking2", FormMethod.Get))
    {<b style="font-size:18px;color:black;font-weight:bold"> Enter Booking Id to get your ticket</b>
        @Html.TextBox("search") <input type="submit" value=" Search" class="btn btn-primary" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.airport1.AirportLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.airport11.AirportLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registration.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.scheduleflight2.SourceAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.scheduleflight2.DestinationAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Passenger1.PassengerId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airport1.AirportLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airport11.AirportLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registration.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.scheduleflight2.SourceAirport)
            </td>
            <th>
                @Html.DisplayFor(model => item.scheduleflight2.DestinationAirport)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Passenger1.PassengerId)
            </td>
            <td>
                @Html.ActionLink("Ticket Details", "Details", new { id = item.BookingId }) |
                @Html.ActionLink("Cancel a ticket", "Delete", new { id = item.BookingId })
            </td>
        </tr>
    }

</table>
